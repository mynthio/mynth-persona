{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": [
    "src/app/**/page.{ts,tsx}",
    "src/app/**/layout.{ts,tsx}",
    "src/app/**/route.{ts,tsx}",
    "src/app/**/loading.{ts,tsx}",
    "src/app/**/error.{ts,tsx}",
    "src/app/**/not-found.{ts,tsx}",
    "src/instrumentation-client.ts",
    "postcss.config.mjs",
    "trigger.config.ts"
  ],
  "project": ["src/**/*.{ts,tsx}"],
  "ignore": [
    "src/components/ui/**",
    "src/components/ai-elements/**",
    "src/components/mynth-ui/**",
    "src/components/animate-ui/**",
    "src/trigger/migrate-persona-images-to-media.task.ts"
  ],
  "ignoreDependencies": [
    "@radix-ui/*",
    "class-variance-authority",
    "clsx",
    "tailwind-merge",
    "lucide-react",
    "shiki",
    "tailwindcss"
  ],
  "ignoreBinaries": ["dev"],
  "rules": {
    "files": "error",
    "dependencies": "error",
    "devDependencies": "warn",
    "exports": "warn"
  }
}
